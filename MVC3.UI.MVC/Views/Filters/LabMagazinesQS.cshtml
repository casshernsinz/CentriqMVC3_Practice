@model IEnumerable<MVC3.DATA.EF.Magazine>

@{
    ViewBag.Title = "Magazine List (LAB)";
}

<h2>@ViewBag.Title</h2>

<div class="row panel panel-primary">
    <br />
    <form action="LabMagazinesQS" method="get" class="form-horizontal pull-left">
        <div class="form-group">
            <div class="col-xs-offset-1 col-xs-11 col-sm-2">
                <label for="searchFilter">Search</label>
            </div>
            <div class="col-xs-offset-1 col-xs-11 col-sm-5">
                <input type="text" name="searchFilter" />
            </div>
            <div class="col-xs-offset-1 col-xs-11 col-sm-2">
                <input type="submit" value="Go!" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>


