@model MVC3.DATA.EF.Publisher

@*This partialView will have its visibility toggled, but wil sit above the table when displayed due to a button click, allowing for adding new records*@


@using (Html.BeginForm("", "", FormMethod.Post, new { id = "PublisherCreateForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
